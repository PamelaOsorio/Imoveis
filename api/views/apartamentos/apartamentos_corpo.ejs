            <legend> Registros de Apartamentos Cadastrados </legend>
            <table id="tabela" class="table-striped">
              <thead id="cabecalho_rel">
                <tr>
                  <th id="codigo"> Código </th>
                  <th id="inativar"> Ativo/Inativo </th>
                  <th id="edificio"> Edifício </th>
                  <th id="numero"> Número </th>
                  <th id="andar"> Andar </th>
                  <th id="quartos"> Qtde de Quartos </th>
                  <th id="proprietario"> Proprietário</th>                   
