                    <td id="andar"> <%= obj_apartamentos[i].apt_andar %> </td>
                    <td id="quartos"> <%= obj_apartamentos[i].apt_quartos %> </td>
                    <td id="proprietario"> <%= obj_apartamentos[i].mor_nome %> </td>
                    <td id="editar"> <a class="btn btn-primary btn-block" href=<%="/apartamentos/editar/" + obj_apartamentos[i].apt_codigo %>> Editar </a></td>
                    <td id="ativar"> <a class="btn btn-danger btn-block" href=<%="/apartamentos/ativoInativo/" + obj_apartamentos[i].apt_codigo %>> Inativar </a></td>
